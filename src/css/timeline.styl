.timeline {

  .category
  {
    color: #ccc;
    text-transform: uppercase;
    font-size: 20px;
    /*background-color: rgba(0,0,0,0.02);*/
    margin-bottom: 10px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    /*margin-top: 0px;*/
  }

  img
  {
    height: 65px;
    margin-top: 8px;
  }

  /* social groups */
  ul
  {
    list-style-type: none;
    padding-left: 0px;
    /*background-color: red;*/

    /* data sources */
    li
    {

      height: 80px;
      /*border-bottom: 1px solid rgba(0,0,0,0.1);*/

      /* service */
      p:nth-child(1)
      {
        color:#a22d5e;
        font-weight: bold;
        margin-top: 30px;

      }

      /* info */
      p:nth-child(2)
      {
        /* label */
        span:nth-child(1)
        {
          margin-top: 15px;
          color:#555555;
          white-space: nowrap;
          display: block;
          text-transform: uppercase;
          font-size: 12px;
          text-align: center;
          font-weight: 500;
        }
        /* counter */
        span:nth-child(2)
        {
          font-weight: 100;
          color:black;
          font-size: 32px;
          display: block;
          text-align: center;
          line-height: 1;
        }
      }
    } /* li */
    li:last-child
    {
      /*border-bottom: 1px solid rgba(0,0,0,0);*/
    }
  } /* ul */
} /* timeline */
