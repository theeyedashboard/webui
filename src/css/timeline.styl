.timeline

  // position: relative
  // top: -34px

  h2
    color: #ccc
    text-transform: uppercase
    font-size: 16px
    margin-bottom: 15px
    padding-bottom: 6px
    border-bottom: 1px solid rgba(0,0,0,0.1)

  .datasources-list h2
    margin-top: -14px

  img
    height: 65px;
    margin-top: 8px;

  /* social groups */
  ul
    list-style-type: none;
    padding-left: 0px;

    li:last-child
      // border-bottom: 1px solid transparent

    li
      height: 80px;
      border-bottom: 1px solid rgba(0,0,0,0.05)
      border-left: 13px solid primary
      margin-left: 0px
      margin-right: 0px
      margin-top: 2px

      /* service */
      p:nth-child(1)
        color: primary;
        font-weight: bold;
        margin-top: 30px;

      /* info */
      p:nth-child(2)
        /* label */
        span:nth-child(1)
          margin-top: 15px;
          color:#555555;
          white-space: nowrap;
          display: block;
          text-transform: uppercase;
          font-size: 12px;
          text-align: center;
          font-weight: 500;

        /* counter */
        span:nth-child(2)
          font-weight: 100;
          color:black;
          white-space: nowrap;
          font-size: 32px;
          display: block;
          text-align: center;
          line-height: 1;

