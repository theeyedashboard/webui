.primary
  color: primary

.data-label
  margin-top: 15px;
  color:#555555;
  white-space: nowrap;
  display: block;
  text-transform: uppercase;
  font-size: 13px;
  text-align: center;
  font-weight: 500;

  /* counter */
.data-value
  font-weight: 100;
  color:primary;
  white-space: nowrap;
  font-size: 45px;
  display: block;
  text-align: center;
  margin-top: -20px;
  margin-bottom: 20px;
  // line-height: 1;

.timeline

  // position: relative
  // top: -34px

  .datasources-list h2
    margin-top: -14px

  img
    height: 65px;
    margin-top: 8px;
    transition: all .15s ease-in-out
    z-index: 100
    opacity: 1

  img.zoomed
    transform-origin: 100% 50%
    transform(translate(-370px, 0px) scale(3.0) )
    // opacity: 0
    position: relative
    z-index: 1000

  /* social groups */
  ul.datasources-list

    list-style-type: none;
    padding-left: 0px;

    li:last-child
      // border-bottom: 1px solid transparent

    li
      height: 80px;
      border-bottom: 1px solid rgba(0,0,0,0.05)
      border-left: 13px solid primary
      margin-left: 0px
      margin-right: 0px
      margin-top: 2px

      /* service */
      p:nth-child(1)
        color: primary;
        font-weight: bold;
        margin-top: 30px;

      /* info */
      p:nth-child(2)
        /* label */
        span:nth-child(1)
          margin-top: 15px;
          color:#555555;
          white-space: nowrap;
          display: block;
          text-transform: uppercase;
          font-size: 12px;
          text-align: center;
          font-weight: 500;

        /* counter */
        span:nth-child(2)
          font-weight: 100;
          color:black;
          white-space: nowrap;
          font-size: 32px;
          display: block;
          text-align: center;
          line-height: 1;

          .datasource_unit
            font-size: 28px
            font-weight: 100;
            opacity: 0.5

